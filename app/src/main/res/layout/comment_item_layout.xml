<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_marginTop="4dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_cmmt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/metro"
        android:text="Name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_cmmt_mssg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metro"
        android:text="This is comment"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_cmmt_name"
        app:layout_constraintStart_toStartOf="@+id/tv_cmmt_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_cmmt_name" />
</androidx.constraintlayout.widget.ConstraintLayout>