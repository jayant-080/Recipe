<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="3dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_main_dishimage"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/plates"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_main_cuisinimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cuisinicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metro"
        android:text="cuisin name"
        android:id="@+id/tv_main_title"
        android:layout_marginTop="1dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="@+id/iv_main_dishimage"
        app:layout_constraintStart_toStartOf="@+id/iv_main_dishimage"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_dishimage" />



    <ImageView
        android:id="@+id/iv_addfavcui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_favorite__red24"
        app:layout_constraintBottom_toBottomOf="@+id/iv_main_cuisinimage"
        app:layout_constraintEnd_toEndOf="@+id/iv_main_dishimage"
        app:layout_constraintTop_toTopOf="@+id/iv_main_dishimage"
        app:layout_constraintVertical_bias="0.13" />
</androidx.constraintlayout.widget.ConstraintLayout>